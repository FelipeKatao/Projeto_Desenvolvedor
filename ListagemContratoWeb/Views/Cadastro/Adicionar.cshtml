@model ListagemContratoWeb.Models.UsuarioCadastroModel
@{
    ViewData["Title"] = "Adicionar Contato";
}

<h1> Adicionar contato</h1>
@using (Html.BeginForm())
{
<form method="post"  action="/Cadastro/Adicionar"  class="needs-validation" novalidate>
    

    <div class="form-group">

    <div class="form-group">
    <label for="exampleFormControlInput1">Nome </label>
    <input type="text"  name="NomeUser_form" class="form-control" id="nomeUsuario"required>
    </div>

    <br>
    <div class="form-group">
    <label for="exampleFormControlInput1">Email </label>
    <input type="email" required class="form-control" id="emailUsuario" name="EmailUser_form">
  </div>

  <br>
    <div class="form-group">
    <label for="exampleFormControlInput1">Data de criação </label>
    <input required type="date"  class="form-control" id="DataUsuario" name="DataUser_form">
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Adicionar contato</button>
</form>
}

