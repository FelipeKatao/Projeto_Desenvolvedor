<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ListagemContratoWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ListagemContratoWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class=" nav navbar-expand-sm navbar-toggleable-sm navbar-light  font-weight-bold border-bottom box-shadow mb-3 nav_color">
            <div class="container-fluid">
                <a class="navbar-brand logo_type" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/notebook.png" height="30vh"> ListarContatoWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold font_ajust" asp-area="" id="index_bt" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold font_ajust" asp-area="" id="filtro_bt" asp-controller="Home" asp-action="Filtrar">Filtrar contatos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark font_ajust" asp-area="" asp-controller="Cadastro" id="add_bt" asp-action="Adicionar">Adicionar contatos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ListagemContratoWeb - Criado por Felipe Catão
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
